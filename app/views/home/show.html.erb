<h1>Anúncios</h1>

<div>
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <td> <strong><%= ad.title %></strong></td>
          <td><%= ad.description %></td>
          <td>R$ <%= ad.price %></td>
          <td>
            <% if ad.user === current_user %>
              <%= link_to 'editar', edit_ad_path(ad) %>
              <%= link_to 'excluir', ad_path(ad), method: :delete, style: 'color: red' %>
            <% else %>
              Sem ação
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>